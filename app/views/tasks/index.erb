<h2>You are logged in as <%= @user.username %></h2>
<h3>Owned Tasks:</h3>
<% sorted_tasks = @user.owned_tasks.sort_by { |owned_task| owned_task.due_date } %>
<% sorted_tasks.each do |task| %>
  <p><a href="/tasks/<%= task.id %>"><%= task.short_description %>, Due:
    <%= task.due_date %></a></p>
<% end %>
<h3>Created Tasks:</h3>
<% sorted_tasks = @user.created_tasks.sort_by { |created_task| created_task.due_date } %>
<% sorted_tasks.each do |task| %>
  <p><a href="/tasks/<%= task.id %>"><%= task.short_description %>, Due:
    <%= task.due_date %></a></p>
<% end %>
<form method="GET" action='/tasks/new'>
  <input type="submit" value="New Task" />
</form>
