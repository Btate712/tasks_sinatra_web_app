<div class="main-heading"><h1>Edit Note:</h1></div>
<div class="message"><% if @failure_message %>
    <h1 class="error"><%= @failure_message %></h1>
  <% end %>
</div>
<div class="align-left">
  <form method="POST" action="/notes/<%= @note.id %>/edit">
    <input type="hidden" id="hidden" name="_method" value="PATCH" />
    <label for="content">Content:</label>
    <textarea name="content" id="content"><%= @note.content %></textarea>
    <input type="hidden" name="task_id" value="<%= @note.task_id %>" readonly />
    <input type="submit" value="Update Note" />
  </form>
</div>
